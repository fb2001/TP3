<resources>
    <!-- Style pour les EditText -->
    <style name="StyledEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Style pour les RadioButton -->
    <style name="StyledRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@android:color/transparent</item> <!-- Supprime l'icône par défaut -->
        <item name="android:gravity">center</item>
    </style>

    <!-- Style pour les CheckBox -->
    <style name="StyledCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">start|center_vertical</item> <!-- Alignement à gauche -->
    </style>

    <!-- Style pour le bouton -->
    <style name="StyledButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item> <!-- Hauteur réduite -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:paddingVertical">8dp</item> <!-- Padding réduit -->
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>