<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_blue"
    tools:context=".InscriptionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <!-- Carte principale avec ombre et coins arrondis -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Titre de la section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Créer un compte"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center"/>

                <!-- Section des informations d'identification -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informations d'identification"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/accent_color"
                    app:hintTextColor="@color/accent_color"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Login"
                        android:drawableStart="@drawable/ic_male"
                        android:drawablePadding="8dp"
                        android:textColor="@color/primary_text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/accent_color"
                    app:hintTextColor="@color/accent_color"
                    android:layout_marginBottom="12dp"
                    app:endIconMode="password_toggle"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mot de passe"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="8dp"
                        android:textColor="@color/primary_text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section des informations personnelles -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informations personnelles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:boxStrokeColor="@color/accent_color"
                        app:hintTextColor="@color/accent_color"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_nom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nom"
                            android:textColor="@color/primary_text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:boxStrokeColor="@color/accent_color"
                        app:hintTextColor="@color/accent_color"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_prenom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Prénom"
                            android:textColor="@color/primary_text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Sélection du genre avec meilleure présentation -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center">

                    <!-- Option Homme avec animation et style améliorés -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/ic_male"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_male"
                                android:padding="8dp"
                                android:background="@drawable/circle_background"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Homme"
                                android:textColor="@color/primary_text"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Option Femme avec animation et style améliorés -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/card_background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/ic_female"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_female"
                                android:padding="8dp"
                                android:background="@drawable/circle_background"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Femme"
                                android:textColor="@color/primary_text"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Autres informations de contact -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/accent_color"
                    app:hintTextColor="@color/accent_color"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_date_naissance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date de naissance"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:inputType="date"
                        android:textColor="@color/primary_text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/accent_color"
                    app:hintTextColor="@color/accent_color"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Téléphone"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="8dp"
                        android:inputType="phone"
                        android:textColor="@color/primary_text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/accent_color"
                    app:hintTextColor="@color/accent_color"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="8dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/primary_text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Centres d'intérêt dans une carte séparée -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/card_background_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Centres d'intérêt"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:layout_marginBottom="12dp"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2">

                            <CheckBox
                                android:id="@+id/cb_sport"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:text="Sport"
                                android:textColor="@color/primary_text"
                                android:buttonTint="@color/accent_color"
                                android:layout_marginBottom="8dp"/>

                            <CheckBox
                                android:id="@+id/cb_musique"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:text="Musique"
                                android:textColor="@color/primary_text"
                                android:buttonTint="@color/accent_color"
                                android:layout_marginBottom="8dp"/>

                            <CheckBox
                                android:id="@+id/cb_lecture"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:text="Lecture"
                                android:textColor="@color/primary_text"
                                android:buttonTint="@color/accent_color"
                                android:layout_marginBottom="8dp"/>

                            <CheckBox
                                android:id="@+id/cb_voyage"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:text="Voyage"
                                android:textColor="@color/primary_text"
                                android:buttonTint="@color/accent_color"
                                android:layout_marginBottom="8dp"/>

                            <CheckBox
                                android:id="@+id/cb_cinema"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:text="Cinéma"
                                android:textColor="@color/primary_text"
                                android:buttonTint="@color/accent_color"
                                android:layout_marginBottom="8dp"/>

                            <CheckBox
                                android:id="@+id/cb_cuisine"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:text="Cuisine"
                                android:textColor="@color/primary_text"
                                android:buttonTint="@color/accent_color"
                                android:layout_marginBottom="8dp"/>
                        </GridLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bouton Soumettre avec animation et style plus attrayant -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_soumettre"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Créer mon compte"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/accent_color"
                    app:icon="@drawable/ic_check"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:padding="12dp"
                    android:elevation="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>