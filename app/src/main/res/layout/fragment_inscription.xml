<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    tools:context=".InscriptionFragment">

    <!-- Carte principale -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:padding="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Champs de saisie stylisés -->
            <EditText
                android:id="@+id/et_login"
                style="@style/StyledEditText"
                android:hint="Login" />

            <EditText
                android:id="@+id/et_password"
                style="@style/StyledEditText"
                android:hint="Mot de passe"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_nom"
                style="@style/StyledEditText"
                android:hint="Nom" />

            <EditText
                android:id="@+id/et_prenom"
                style="@style/StyledEditText"
                android:hint="Prénom" />

            <!-- Sélection du genre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <!-- Option Homme -->
                <ImageView
                    android:id="@+id/ic_male"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_male"
                android:layout_margin="8dp"
                android:onClick="onMaleClicked"/>

                <!-- Option Femme -->
                <ImageView
                    android:id="@+id/ic_female"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_female"
                android:layout_margin="8dp"
                android:onClick="onFemaleClicked"/>
            </LinearLayout>

            <!-- Autres champs -->
            <EditText
                android:id="@+id/et_date_naissance"
                style="@style/StyledEditText"
                android:hint="Date de naissance"
                android:inputType="date" />

            <EditText
                android:id="@+id/et_telephone"
                style="@style/StyledEditText"
                android:hint="Téléphone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/et_email"
                style="@style/StyledEditText"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <!-- Centres d'intérêt -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centres d'intérêt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="8dp">

                <CheckBox
                    android:id="@+id/cb_sport"
                    style="@style/StyledCheckBox"
                    android:text="Sport"/>

                <CheckBox
                    android:id="@+id/cb_musique"
                    style="@style/StyledCheckBox"
                    android:text="Musique"/>

                <CheckBox
                    android:id="@+id/cb_lecture"
                    style="@style/StyledCheckBox"
                    android:text="Lecture"/>

                <CheckBox
                    android:id="@+id/cb_voyage"
                    style="@style/StyledCheckBox"
                    android:text="Voyage"/>

                <CheckBox
                    android:id="@+id/cb_cinema"
                    style="@style/StyledCheckBox"
                    android:text="Cinéma"/>

                <CheckBox
                    android:id="@+id/cb_cuisine"
                    style="@style/StyledCheckBox"
                    android:text="Cuisine"/>
            </GridLayout>

            <!-- Bouton Soumettre amélioré -->
            <Button
                android:id="@+id/btn_soumettre"
                style="@style/StyledButton"
                android:text="Soumettre"
                android:drawableLeft="@drawable/ic_check"
                android:drawablePadding="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>